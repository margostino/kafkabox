<configuration>
    <!-- console output -->
    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %X{some} [%t] %-5level %logger{36}:%line - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>